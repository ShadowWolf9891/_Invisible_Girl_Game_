<?xml version="1.0" encoding="utf-8"?>

<root main_tree_to_execute ="PassiveNPCTree">
	<BehaviorTree ID="PassiveNPCTree">
		<Sequence name ="root_sequence">
			<Script code="Anim:='Idle'"/>
			<TriggerEvent EventType ="{Anim}"/>
			<ReactiveSequence>
				<SubTree ID="SelectAnimationTree" animToPlay="{Anim}"/>
				<TriggerEvent EventType ="{Anim}"/>
			</ReactiveSequence>
		</Sequence>
	</BehaviorTree>

	<BehaviorTree ID="SelectAnimationTree">
		<ReactiveSequence>
			<GetMoveSpeed moveSpeed="{the_moveSpeed}"/>
			<ReactiveFallback>
				<Script code="animToPlay:='Walk'" _while="the_moveSpeed>0"/>
				<Script code="animToPlay:='Idle'"/>
			</ReactiveFallback>
		</ReactiveSequence>
	</BehaviorTree>


</root>